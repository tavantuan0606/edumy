<% layout('/layouts/boilerplate') %>
    <h3 class="mb-4">Khám phá khóa học</h3>
    <div class="row">
        <% unjoinedCourses.forEach(course=> { %>
            <div class="col-md-4">
                <div class="card mb-3 shadow-sm">
                    <img src="<%= course.images[0]?.url || '/default.png' %>" class="card-img-top" alt="Course image">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= course.title %>
                        </h5>
                        <p class="card-text">
                            <%= course.description.slice(0, 100) %>...
                        </p>
                        <a href="/explore/<%= course._id %>/preview" class="btn btn-primary">Xem chi tiết</a>
                    </div>
                </div>
            </div>
            <% }) %>
    </div>