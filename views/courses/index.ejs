<% layout('/layouts/boilerplate')%>
<h1>All Courses</h1>

<% for (let course of courses) {%>
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-4">
                <% if(course.images.length) {%>
                <img src="<%=course.images[0].url%>" alt="" class="img-fluid">
                <% } %>
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%=course.title%></h5>
                    <h5 class="card-title"><%=course.location%></h5>
                </div>
                <a class="btn btn-primary" href="courses/<%=course._id%>">View <%=course.location%></a>
            </div>
        </div>
    </div>
<% } %>

<script>
    const maptilerApiKey = '<%= process.env.MAPTILER_API_KEY %>';
    const courses = {features: <%- JSON.stringify(courses) %>};
</script>

<script src="/javascripts/clusterMap.js"></script>
