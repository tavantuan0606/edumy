<% layout('/layouts/boilerplate')%>
<h1>Accepted members</h1>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Entry Number</th>
            <th>Race Result</th>
            <th>Name</th>
            <th>Age</th>
            <th>Nationality</th>
            <th>Sex</th>
            <th>Passport</th>
            <th>Mobile Number</th>
            <th>Email</th>
            <th>Address</th>
            <th>Hotel</th>
        </tr>
    </thead>
    <% for(let par of acceptedPar) { %>
        <tr>
            <td>
                <%= par.entry_number %>
            </td>
            <td>
                <%= par.race_result %>
                <% if(par.race_result) {%>
                    m
                    <% } %>
            </td>
            <td>
                <%= par.name %>
            </td>
            <td>
                <%= par.age %>
            </td>
            <td>
                <%= par.nationality %>
            </td>
            <td>
                <%= par.sex %>
            </td>
            <td>
                <%= par.passport_no %>
            </td>
            <td>
                <%= par.mobile_num %>
            </td>
            <td>
                <%= par.e_mail %>
            </td>
            <td>
                <%= par.current_address %>
            </td>
            <td>
                <%= par.hotel_name %>
            </td>
            <td>
            <a href="/members/<%= par._id %>/edit" class="btn btn-primary">Edit</a>
            </td>
            <td>
            <form action="/members/<%=par._id %>?_method=DELETE" method="POST" class="d-inline">
                <button class="btn btn-danger">DELETE</button>
            </form>
            </td>
        </tr>
        <% } %>
             
</table>